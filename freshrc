# vim: set ft=sh
export FRESH_LOCAL="$HOME/dev/dotfiles"
fresh freshshell/fresh bin/fresh --bin

# bin
fresh-options --bin
    fresh bin/backup
    fresh bin/pacman-disowned
fresh-options

# config
fresh Xresources --file=~/.config/X11/Xresources
fresh solarized/xresources solarized --file=~/.config/X11/Xresources
fresh seebi/dircolors-solarized dircolors.ansi-dark --file=~/.config/zsh/dircolors

# zsh
fresh zsh/zshenv --file=~/.config/zsh/.zshenv
fresh-options --file=~/.config/zsh/.zshrc --marker=#
    fresh twe4ked/dotfiles shell/zsh/completion.zsh
    fresh rupa/z z.sh
    fresh robbyrussell/oh-my-zsh plugins/systemd/systemd.plugin.zsh
    fresh zsh/aliases.sh
    fresh zsh/functions.sh
    fresh zsh/zshrc
fresh-options

# vim
fresh-options --file=~/.config/vim/vimrc --marker=\"
    fresh vim/vundle_before.vim
    fresh vim/vundle.vim
    fresh twe4ked/dotfiles vim/vundle_after.vim
    fresh vim/vimrc
fresh-options
