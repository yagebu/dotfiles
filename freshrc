export FRESH_LOCAL="$HOME/dev/dotfiles"
fresh freshshell/fresh bin/fresh --bin

# config
fresh seebi/dircolors-solarized dircolors.ansi-dark --file=~/.config/zsh/dircolors

# zsh
fresh zsh/zshenv --file=~/.config/zsh/.zshenv
fresh-options --file=~/.config/zsh/.zshrc --marker=#
    fresh twe4ked/dotfiles shell/zsh/completion.zsh
    fresh junegunn/fzf shell/key-bindings.zsh
    fresh rupa/z z.sh
    fresh zsh/aliases.sh
    fresh zsh/zshrc
fresh-options

# vim
fresh-options --file=~/.config/vim/vimrc --marker=\"
    fresh vim/init.vim
    fresh vim/plugins.vim
    fresh vim/vimrc
fresh-options

if [[ "$OSTYPE" == "darwin"* ]]; then
fresh bin/backup-mac --bin=~/bin/backup

elif [[ "$OSTYPE" == "linux-gnu" ]]; then
fresh bin/backup-arch --bin=~/bin/backup
fresh bin/backup-external --bin
fresh bin/cleanup --bin
fresh bin/pacman-disowned --bin

fresh Xresources --file=~/.config/Xresources
fresh solarized/xresources solarized --file=~/.config/Xresources

fresh copycat-killer/lain . --file=~/.config/awesome/lain/
fresh copycat-killer/awesome-copycats menugen --file=~/.config/awesome/menugen/
fresh copycat-killer/awesome-copycats scratchdrop --file=~/.config/awesome/scratchdrop/
fresh copycat-killer/awesome-copycats themes/multicolor --file=~/.config/awesome/themes/multicolor/
fresh awesome/rc.lua --file=~/.config/awesome/rc.lua

fresh compton.conf --file=~/.config/compton.conf
fi
