#!/bin/bash

BACKUP_DIR=/run/media/jakob/Quickstore

if [ -d $BACKUP_DIR ]; then
    echo "Backing up Pictures to Quickstore.."
    rsync -a --delete ~/Pictures/ $BACKUP_DIR/Pictures
    echo "Done."
else
    echo "backup directory (Quickstore) not found"
fi

BACKUP_DIR2=/run/media/jakob/BACKUP
if [ -d $BACKUP_DIR2 ]; then
    echo "Backing up everything from Quickstore to WD.."
    rsync -a --delete --progress $BACKUP_DIR/ $BACKUP_DIR2
    echo "Done."
else
    echo "backup directory (WD) not found"
fi
