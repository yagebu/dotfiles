#!/bin/bash

if [[ $1 == "raw" ]]; then
    borg create -vp "ks:backup/raw::$(date +%Y-%m-%d)" ~/var/RAW ~/var/panoramas
fi

if [[ $1 == "vm" ]]; then
    borg create -vp "ks:backup/vm::$(date +%Y-%m-%d)" -C zlib ~/var/VMs
fi

if [[ $1 == "prune" ]]; then
    # keep 2 VM backups
    borg prune --list -v -H2 ks:backup/vm
fi
